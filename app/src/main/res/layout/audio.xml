<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#982B1C"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewEntrevista"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/perfil" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewEntrevista"
        android:layout_marginTop="10dp"
        android:text="ID: 78945"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewEntrevista"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageViewEntrevista"
        android:text="DescripciÃ³n de la entrevista"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPeriodista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescripcion"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageViewEntrevista"
        android:text="Nombre del periodista"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPeriodista"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageViewEntrevista"
        android:text="Fecha de la entrevista"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFecha"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageViewEntrevista"
        android:backgroundTint="#131842"
        android:onClick="reproducirAudio"
        android:padding="8dp"
        android:text="Reproducir"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>